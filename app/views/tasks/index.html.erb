<article>
  <h1>TASKLIST</h1>
  <section>

    <h3>YOUR TASKS</h3>

    <ol>
      <% @tasks.each do |task| %>
        <li>

          <% if task.completed %>
            <%= link_to task.action, task_path(task.id), :style => "text-decoration: line-through" %><br>
          <% else %>
            <%= link_to task.action, task_path(task.id) %><br>
          <% end %>

          
          <%= link_to "Edit |", edit_task_path(task.id) %>

          <%= link_to "Delete |", task_path(task.id), data: { confirm: "Are you sure you want to delete this task: #{task.action}?", method: :delete} %>

          <%= link_to "Mark completed", completed_task_path(task.id), data: { confirm: "Are you sure you want to mark '#{task.action}' as complete?", method: :patch} %>
        </li><br>
      <% end %>
    </ol>



  </section>
</article>
